<Window x:Class="RestaurentMngment.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurentMngment"
        mc:Ignorable="d"
        Title="login" Width="300" Height="200"
        Left="600" Top="200" Background="#8E8E8E"
        WindowStyle="None">
    <Grid Margin="10" Background="#E8E8E8">
        <PasswordBox Name="password" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center"  Width="178" MaxLength="10" PasswordChar="*" />
        <Button Content="Log In" Name="loginbtn" HorizontalAlignment="Left" Margin="47,116,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.52,-0.25" Click="loginbtn_Click"/>
        <Button Content="Exit" Name="exit" HorizontalAlignment="Left" Margin="150,116,0,0" VerticalAlignment="Top" Width="75" Click="exit_Click"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="104,40,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.167,0.462"/>

    </Grid>
</Window>
